<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="assets/css/index.css" />
    <script src="https://kit.fontawesome.com/3fbc68957e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <title>Home</title>
  </head>
  <body>
    {{! Navbar start }}
    <nav class="navbar navbar-expand-lg bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand text-light" href="/">Soal-4</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active text-light" aria-current="page" href="/">Home</a>
          </div>
        </div>
        {{#if isLogin}}
          <p class="me-3 text-light">Welcome, {{user.id}} {{user.username}}</p>
          <a href="/logout" class="btn btn-light text-decoration-none me-3">Logout</a>
        {{else}}
          <a href="/login" class="btn btn-light text-decoration-none me-3">Login</a>
          <a href="/register" class="btn btn-light text-decoration-none">register</a>
        {{/if}}
      </div>
    </nav>
    {{! Navbar end }}

    {{! Collection }}
    <div class="container shadow bg-light my-5 rounded p-4" style="width: 60%;">
      <div class="title-content">
        <h3 class="text-dark">Collection</h3>
      </div>
      <div class="container card-container d-flex flex-wrap justify-content-center mx-auto gap-4">
        {{#if isLogin}}
          <div class="card bg-dark p-3 shadow justify-content-center" style="width: 250px; height: 250px;">
            <a href="/collection" class="mx-auto"><i class="fa-regular fa-square-plus text-light" style="font-size: 100px !important;"></i></a>
          </div>
        {{/if}}
        {{#each objCollection}}
          <div class="card bg-dark p-3 shadow" style="width: 250px; height: 250px;">
            <div class="logo mt-4 mb-5">
              <i class="fa-regular fa-note-sticky text-light fs-1"></i>
            </div>
            <div class="d-flex row">
              <div class="col-7">
                <a href="/task/{{this.id}}" class="text-decoration-none">
                  <h4 class="text-light">{{this.name}}</h4>
                </a>
                <p class="text-light">2/9 done</p>
              </div>
              <div class="col-5">
                <i class="fa-regular fa-circle-check text-success fs-1"></i>
              </div>
            </div>
          </div>
        {{/each}}

      </div>
    </div>
    {{! Collection end}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>